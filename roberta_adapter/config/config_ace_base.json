{
    "bert_model_name": "roberta-base",
    "bert_cache_dir": "./roberta",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.5,
    "linear_dropout": 0.4,
    "linear_bias": true,
    "linear_activation": "relu",
    "entity_hidden_num": 300,
    "train_folder": "Ace2005/",
    "dev_folder": "Ace2005/",
    "test_file": "Ace2005/test.txt",
    "log_path": "./log/ace_base",
    "output_path": "./output/ace_base",
    "accumulate_step": 1,
    "batch_size": 40,
    "eval_batch_size": 40,
    "max_epoch": 25,
    "max_length": 175,
    "learning_rate": 0.001,
    "bert_learning_rate": 1e-05,
    "weight_decay": 0.001,
    "bert_weight_decay": 1e-05,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
    "gpu_device": 0,
    "seed": 0,
    "use_type": ["PER", "ORG", "LOC", "VEH","GPE","WEA","FAC"]
}
