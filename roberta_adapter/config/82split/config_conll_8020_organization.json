{
    "bert_model_name": "roberta-base",
    "bert_cache_dir": "./roberta",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.5,
    "linear_dropout": 0.4,
    "linear_bias": true,
    "linear_activation": "relu",
    "entity_hidden_num": 300,
    "train_folder": "CoNLL2003/2split",
    "dev_folder": "CoNLL2003/2split",
    "dev_file": "CoNLL2003/dev.txt",
    "test_file": "CoNLL2003/test.txt",
    "log_path": "./log/conll_8020_organization",
    "output_path": "./output/conll_8020_organization",
    "accumulate_step": 1,
    "batch_size": 40,
    "eval_batch_size": 40,
    "max_epoch": 25,
    "max_length": 175,
    "learning_rate": 0.001,
    "bert_learning_rate": 1e-05,
    "weight_decay": 0.001,
    "bert_weight_decay": 1e-05,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
    "gpu_device": 0,
    "seed": 0,
    "use_type": ["PER", "LOC", "MISC"],
    "use_type2": ["ORG","PER", "LOC", "MISC"]
}
